<div class="mx-auto md:w-2/3 w-full flex justify-center">
  <div class="w-full px-4 py-6 bg-white shadow-md rounded-lg">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @article %>

    <div class="mt-6 flex space-x-4">
      <%= link_to "Edit this article", edit_article_path(@article), class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium hover:bg-blue-700 transition duration-300" %>

      <%= link_to "Back to articles", articles_path, class: "rounded-lg py-3 px-5 bg-gray-100 text-gray-700 font-medium hover:bg-gray-200 transition duration-300" %>

      <div class="inline-block">
        <%= button_to "Destroy this article", @article, method: :delete, class: "rounded-lg py-3 px-5 bg-red-600 text-white font-medium hover:bg-red-700 transition duration-300" %>
      </div>
    </div>
  </div>
</div>
