<div class="w-full px-4">
  <% if notice.present? %>
    <p class="py-2 px-4 bg-green-100 mb-5 text-green-700 font-medium rounded-lg inline-block shadow-md" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <%= content_for :title, "Articles" %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl text-gray-800">Articles</h1>
    <%= link_to "New article", new_article_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white hover:bg-blue-700 transition duration-300 font-medium" if policy(@articles).new? %>
  </div>

  <div id="articles" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @articles.each do |article| %>
      <div class="bg-white border border-gray-200 shadow-md rounded-lg p-4">
        <%= render article %>
        <div class="mt-4">
          <%= link_to "Show this article", article, class: "ml-2 rounded-lg py-2 px-4 bg-gray-200 hover:bg-gray-300 transition duration-300 inline-block font-medium" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
